<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppCompat.TelaCheia" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="MyMenuTheme" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <!--Thema EditText Usuario-->
    <style name="EditTextBranco" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="HintBranco" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Thema EditText Azul-->
    <style name="EditTextAzul" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorAzul</item>
        <item name="colorControlActivated">@color/colorAzul</item>
        <item name="colorControlHighlight">@android:color/black</item>
    </style>

    <style name="HintAzul" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorAzul</item>
    </style>

    <!--Thema Error-->
    <style name="ErrorTextColorVermelho" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorError</item>
    </style>
    <style name="ErrorTextColorCinza" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#f1f1f1</item>
    </style>
    <style name="ErrorTextColorAzul" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#33a8ec</item>
    </style>

    <!--Thema Toolbar-->
    <style name="ToolbarTransparent">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="navigationIcon">@drawable/ic_voltar</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">10dp</item>
    </style>

    <!--Thema Toolbar Usuario-->
    <style name="ToolbarUsuario">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:shadowColor">@color/colorAccent</item>
    </style>

    <!--TextInputLayoutFull-->
    <style name="FullWidthEditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">20dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="HintCinza" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorAzul</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/color3</item>

        <item name="android:colorForeground">@color/colorCinza</item>
    </style>

</resources>
