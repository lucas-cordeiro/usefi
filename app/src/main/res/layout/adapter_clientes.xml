<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal">


        <android.support.constraint.ConstraintLayout
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_weight="0">

            <ProgressBar
                android:id="@+id/progressBarFotoCliente"
                style="?android:attr/progressBarStyle"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fotoCliente"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNomeCliente"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_margin="2dp"
                android:text="Nome"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtIdadeCliente"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:text="Idade"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtPlataformaCliente"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:text="Plataforma"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtUltimoAcessoCliente"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:text="Ãšltimo Acesso"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>